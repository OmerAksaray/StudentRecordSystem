@model IEnumerable<StudentModel>
 <partial name="_Notification" />
<div class="container">
    <h2>Studnet List</h2>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Student Photo</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">School Number</th>
                <th scope="col">Teacher of student</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var student in Model)
            {
                
            <tr>
                    <th scope="row">@student.StudentId</th>
                    <td>
                        <img src="@student.ImageUrl" class="img-thumbnail" alt="img" width="100px" height="50px" />
                    </td>
                    <td>@student.Name</td>
                    <td>@student.Surname</td>
                    <td >@student.SchoolNumber</td>
                    
                    <td>@student.Teacher.Name   @student.Teacher.Surname</td>
                    
                    <td>
                        <a type="button" class="btn btn-warning rounded" asp-action="Upsert" asp-route-id="@student.StudentId">
                            <i class="bi bi-pencil-fill"></i>
                        Edit
                    </a>
                        <form type="button" class="d-inline-flex" method="post" asp-action="Delete" asp-route-id="@student.StudentId">
                            <button class="btn btn-danger rounded"> <i class="bi bi-trash"></i> Delete</button>
                            </form>
                    </td>
            </tr>
            }
            
        </tbody>
    </table>
</div>
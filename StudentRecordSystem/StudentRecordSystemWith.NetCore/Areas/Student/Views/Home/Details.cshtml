@model StudentModel
<form method="post">
    <div class="card shadow border-0 mt-4">
        
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase" >
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row ps-2">
                            <h3 class="text-dark text-opacity-50 ">@Model.Name @Model.Surname</h3>
                        </div>
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge text-dark">Name of mentor: @Model.Teacher.Name @Model.Teacher.Surname</span>
                            <span class="badge text-dark">Profession of mentor: @Model.Teacher.Profession</span>
                        </div>
                        
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                School Number:
                                <span >
                                    @Model.SchoolNumber
                                </span>
                            </h6>
                        </div>
                       
                       
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">Education: @Model.Education</p>
                            <p class="text-secondary lh-sm">Description: @Model.Description</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart for lesson (Comming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
